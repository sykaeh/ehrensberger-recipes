{
  "name": "ehrensberger-recipes",
  "version": "1.0.0",
  "description": "Recipes of the Ehrensberger family",
  "scripts": {
    "build-dev:webpack": "webpack",
    "watch:webpack": "webpack --watch",
    "watch:eleventy": "cross-env ELEVENTY_ENV=development eleventy --serve",
    "dev": "npm-run-all clean build-dev:webpack --parallel watch:*",
    "build:webpack": "cross-env NODE_ENV=production webpack --mode production",
    "build:eleventy": "cross-env ELEVENTY_ENV=production eleventy",
    "build": "run-s clean build:*",
    "serve:local": "serve _site",
    "serve": "run-s build serve:local",
    "clean": "rimraf _site",
    "format:js": "prettier '**/*.js' --write && eslint '**/*.js' --fix",
    "format:json": "prettier '**/*.json' --write",
    "format": "run-s format:*",
    "lint": "eslint --ext .js ."
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:sykaeh/ehrensberger-recipes.git"
  },
  "devDependencies": {
    "@11ty/eleventy": "~0.11.1",
    "autoprefixer": "~9.8.6",
    "copy-webpack-plugin": "~6.4.1",
    "cross-env": "~7.0.3",
    "css-loader": "~4.3.0",
    "cssnano": "^4.1.10",
    "eleventy-plugin-lazyimages": "^2.1.2",
    "eslint": "^8.23.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "file-loader": "~6.2.0",
    "glob": "^7.1.6",
    "html-minifier": "^4.0.0",
    "html-webpack-plugin": "~4.5.0",
    "husky": "~4.3.6",
    "image-webpack-loader": "^6.0.0",
    "lint-staged": "~10.5.3",
    "mini-css-extract-plugin": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "tailwindcss": "~1.9.6",
    "webpack": "~4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-fix-style-only-entries": "~0.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "eslint"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
